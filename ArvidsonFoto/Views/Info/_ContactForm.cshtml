@model ContactFormModel

@* //Raden nedanför översätts till: <form method="post" action="/Info/SendMessage?Page=Kontakta"> *@
<form method="post" asp-action="@(nameof(InfoController.SendMessage))" asp-route-Page="@Model.ReturnPageUrl" class="needs-validation" novalidate>
    <div id="validationSummary" asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>
    @if (Model!.DisplayErrorSending)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong><i class="bi bi-exclamation-triangle-fill"></i> Ett fel uppstod!</strong> 
            <p class="mb-2">Något gick fel när meddelandet skulle skickas via formuläret. Ditt meddelande har sparats som backup.</p>
            <p class="mb-0"><strong>Alternativ:</strong> Skicka ett mail direkt till <a href="mailto:torbjorn@arvidsonfoto.se" class="alert-link">torbjorn@arvidsonfoto.se</a></p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Stäng"></button>
        </div>
    }
    @if (Model.DisplayEmailSent)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong><i class="bi bi-check-circle-fill"></i> Tack för ditt mejl!</strong> Jag återkommer inom 1-5 dagar med svar på ditt mejl.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Stäng"></button>
        </div>
    }
    <div class="row g-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label"><i class="bi bi-person"></i> Namn <span class="text-danger">*</span></label>
            <input asp-for="Name" type="text" placeholder="Ditt namn" class="form-control" required aria-required="true" aria-describedby="validationName" />
            <div id="validationName" class="invalid-feedback" asp-validation-for="Name"></div>
        </div>
        <div class="col-12">
            <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> Epost <span class="text-danger">*</span></label>
            <input asp-for="Email" type="email" placeholder="din.epost@exempel.se" class="form-control" required aria-required="true" aria-describedby="validationEmail" />
            <div id="validationEmail" class="invalid-feedback" asp-validation-for="Email"></div>
        </div>
        <div class="col-12">
            <label asp-for="Subject" class="form-label"><i class="bi bi-tag"></i> Rubrik <span class="text-danger">*</span></label>
            <input asp-for="Subject" type="text" placeholder="Rubrik på ditt meddelande" class="form-control" required aria-required="true" aria-describedby="validationSubject" />
            <div id="validationSubject" class="invalid-feedback" asp-validation-for="Subject"></div>
        </div>
        <div class="col-12">
            <label asp-for="Message" class="form-label"><i class="bi bi-chat-left-text"></i> Meddelande <span class="text-danger">*</span></label>
            <textarea asp-for="Message" placeholder="@Model.MessagePlaceholder" rows="6" class="form-control" required aria-required="true" aria-describedby="validationMessage"></textarea>
            <div id="validationMessage" class="invalid-feedback" asp-validation-for="Message"></div>
        </div>
        <div class="col-12">
            <img src="/img/a575grj5dgs575389aw.gif" class="img-fluid rounded mb-2" alt="CAPTCHA bild med siffror" style="max-width: 200px;" />
        </div>
        <div class="col-12">
            <label asp-for="Code" class="form-label"><i class="bi bi-shield-check"></i> Ange siffrorna från bilden <span class="text-danger">*</span></label>
            <input asp-for="Code" placeholder="Siffror från bilden" class="form-control" required aria-required="true" aria-describedby="validationCode" />
            <div id="validationCode" class="invalid-feedback" asp-validation-for="Code"></div>
        </div>
        <div class="col-12">
            <button id="SubmitButton" type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-send-fill"></i> Skicka meddelandet
            </button>
        </div>
    </div>
</form>