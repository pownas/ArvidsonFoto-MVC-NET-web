@*<!-- Home-Index (Startsidan) -->*@
@model GalleryViewModel

@section MetaData {
    <meta name="robots" content="noimageindex" />
    <meta name="description" content="@Localizer["MetaDescription"]" />
    <link rel="canonical" href="https://ArvidsonFoto.se/" />
}

@inject IImageService _imageService
@{
    Model!.DisplayImagesList = _imageService.GetRandomNumberOfImages(12); //Hämtar (x)-antal bilder att visa på startsidan
}

<div id="page-header">
    <h2>Torbjörn Arvidson Foto <small>@Localizer["WelcomeTitle"]</small></h2>
</div>

<div id="page-content" class="row">
    <div class="col-xs-12 col-sm-5">
        <p>@Localizer["IntroText"]</p>
        <p>
            @Localizer["BuyHighResText"] <br>
            @Localizer["ContactMeAt"] <a href="mailto:torbjorn_arvidson@hotmail.com">torbjorn_arvidson@hotmail.com</a>.
        </p>
        <p><i>/Torbjörn Arvidson</i></p>
        <div class="text-center text-md-left">
            <figure class="figure alert alert-light" title="Torbjörn Arvidson">
                <img class="figure-img img-fluid rounded" width="420" height="420" src="./img/Torbjorn2020.jpg" alt="@Localizer["ImageOf"] Torbjörn Arvidson" title="Torbjörn Arvidson" />
                <figcaption class="figure-caption text-center text-truncate">Torbjörn Arvidson</figcaption>
            </figure>
        </div>
    </div>
    <div id="page-gallery" class="mt-3 col-12 col-sm-7">
        <partial name="../Bilder/_Gallery" model="Model" />
        <div class="text-center">
            <small>@Localizer["RandomImages"]</small>
        </div>
    </div><!-- /end-gallery -->
</div>