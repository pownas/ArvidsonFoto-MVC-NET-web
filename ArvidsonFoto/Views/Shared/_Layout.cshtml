<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="ArvidsonFoto-version" content="v0.3.1 - https://github.com/pownas/ArvidsonFoto-Blazor/tree/7e53de5 " /> <!-- Bör vara: /commit/ eller /tree/ -->
    <title>@ViewData["Title"] - ArvidsonFoto</title>
    <base href="~/" />
    <link rel="stylesheet" href="lib/bootstrap-4.5.3-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="lib/jQuery.smartmenus-1.1.1/css/sm-core-css.css" />
    <link rel="stylesheet" href="lib/jQuery.smartmenus-1.1.1/css/sm-mint/sm-mint.css" />
    <link rel="stylesheet" href="lib/jQuery.smartmenus-1.1.1/css/sm-mint-addon.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    <header>
        <partial name="_NavBar" />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - ArvidsonFoto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/jQuery.smartmenus-1.1.1/jquery.smartmenus.min.js"></script>
    <script src="lib/jQuery.smartmenus-1.1.1/smartmenu.js"></script>
    <script src="js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>