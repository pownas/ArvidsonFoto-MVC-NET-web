@model ErrorViewModel
@inject NavigationManager NavigationManager
@{
    ViewData["Title"] = "Error";
    Log.Error("Error-page was shown. URL visited: " + NavigationManager.Uri); //Loggar den sidan som gett error till /logs/datum-logfil.txt , via Serilog
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    Log.Error("Error-page was shown via requestId: " + Model.RequestId);
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Development Mode</h3>
<p>
    If this error occurs alot, please contact me. So my webmaster can fix the error...
</p>

<p>Go back to the <a href="/">startpage</a></p>